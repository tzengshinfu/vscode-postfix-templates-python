// A launch configuration that compiles the extension and then opens it inside a new window
{
  "version": "0.1.0",
  "configurations": [
    {
      "name": "Launch Extension",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": [
        "--extensionDevelopmentPath=${workspaceRoot}"
      ],
      "sourceMaps": true,
      "outFiles": [
        "${workspaceRoot}/out/**/*.js"
      ],
      "preLaunchTask": "npm: watch-clean"
    },
    {
      "name": "Launch Tests",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${env:VSCODE_EXECUTABLE_PATH}",
      "args": [
        "--disable-extensions",
        "--user-data-dir=${workspaceRoot}/.vscode-test/user-data",
        "--extensions-dir=${workspaceRoot}/.vscode-test/extensions",
        "--extensionDevelopmentPath=${workspaceRoot}/out",
        "--extensionTestsPath=${workspaceRoot}/out/test"
      ],
      "env": {
        "NODE_ENV": "test",
        "POSTFIX_MOCHA_REPORTER": "min",
        "POSTFIX_MOCHA_GREP": "^03\\.",
        "VSCODE_EXECUTABLE_PATH": "${env:VSCODE_EXECUTABLE_PATH}"
      },
      "sourceMaps": true,
      "outFiles": [
        "${workspaceRoot}/out/test/**/*.js",
        "${workspaceRoot}/out/src/**/*.js"
      ],
      "preLaunchTask": "pretest-clean (node)"
    },
    {
      "name": "Launch Tests (external terminal)",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/out/test/runTests.js",
      "runtimeExecutable": "node",
      "console": "externalTerminal",
      "env": {
        "NODE_ENV": "test",
        "VSCODE_EXECUTABLE_PATH": "${execPath}",
        "POSTFIX_MOCHA_REPORTER": "min",
        "POSTFIX_MOCHA_GREP": "^03\\."
      },
      "preLaunchTask": "pretest-clean (node)"
    }
,
    {
      "name": "Launch Tests via npm",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "args": ["run", "test"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "env": {
        "VSCODE_EXECUTABLE_PATH": "${execPath}",
        "POSTFIX_MOCHA_REPORTER": "min",
        "POSTFIX_MOCHA_GREP": "^03\\."
      },
      "preLaunchTask": "npm: pretest-clean"
    }
}
