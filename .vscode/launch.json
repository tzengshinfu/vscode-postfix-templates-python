// A launch configuration that compiles the extension and then opens it inside a new window
{
  "version": "0.1.0",
  "configurations": [
    {
      "name": "Launch Extension",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": [
        "--extensionDevelopmentPath=${workspaceRoot}"
      ],
      "sourceMaps": true,
      "outFiles": [
        "${workspaceRoot}/out/**/*.js"
      ],
      "preLaunchTask": "npm: watch-clean"
    },
    {
      "name": "Launch Tests",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["--silent"],
      "args": [
        "run",
        "test"
      ],
      "cwd": "${workspaceFolder}",
      "console": "internalConsole",
      "internalConsoleOptions": "openOnSessionStart",
      "outputCapture" : "std",
      "env": {
        "VSCODE_EXECUTABLE_PATH": "${execPath}",
        "POSTFIX_MOCHA_REPORTER": "min",
        "POSTFIX_MOCHA_GREP": "04.*",
        "VSCODE_LOG_LEVEL": "off",
        "ELECTRON_NO_ATTACH_CONSOLE": "1"
      },
      "preLaunchTask": "npm: pretest-clean"
    }
  ]
}
