// A launch configuration that compiles the extension and then opens it inside a new window
{
  "version": "0.1.0",
  "configurations": [
    {
      "name": "Launch Extension",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": [
        "--extensionDevelopmentPath=${workspaceRoot}"
      ],
      "sourceMaps": true,
      "outFiles": [
        "${workspaceRoot}/out/**/*.js"
      ],
      "preLaunchTask": "npm: watch-clean",
    },
    {
      "name": "Launch Tests",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${env:VSCODE_EXECUTABLE_PATH}",
      "args": [
        "--disable-extensions",
        "--user-data-dir=${workspaceRoot}/.vscode-test/user-data",
        "--extensions-dir=${workspaceRoot}/.vscode-test/extensions",
        "--extensionDevelopmentPath=${workspaceRoot}/out",
        "--extensionTestsPath=${workspaceRoot}/out/test"
      ],
      "env": {
        "NODE_ENV": "test",
        "POSTFIX_MOCHA_REPORTER": "min",
        "POSTFIX_MOCHA_GREP": "^03\."
      },
      "sourceMaps": true,
      "outFiles": [
        "${workspaceRoot}/out/test/**/*.js",
        "${workspaceRoot}/out/src/**/*.js"
      ],
      "preLaunchTask": "npm: pretest-clean"
    }
  ]
}
